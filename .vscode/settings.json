{
  "css.validate": false,
  "scss.validate": false,
  "editor.wordWrap": "on",
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [
    "schema",
    "client",
    "server"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "client": true,
    "server": true,
    "schema": true,
  }
}